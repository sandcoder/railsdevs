<div class="p-10 bg-white border rounded">
  <%= form_with(model: job, local: true, multipart: true) do |form| %>
    <% if job.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(job.errors.count, "error") %> prohibited this job from being saved:</h2>

        <ul>
          <% job.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    <div class="flex items-center flex-wrap justify-between input-group">
      <div>
        <%= form.label :company_logo, class: 'label' %>
        <%= form.file_field :company_logo %>
      </div>
      <% if form.object.company_logo.attached? %>
        <%= image_tag form.object.company_logo, class: 'w-24 h-auto'%>
      <% end %>
    </div>
    <div class="input-group">
      <%= form.label :title, class: 'label' %>
      <%= form.text_field :title, class: 'input' %>
    </div>

    <div class="grid grid-cols-1 gap-6 lg:grid-cols-2 input-group">
      <div class="lg:col-span-1">
        <%= form.label :link_to_apply, class: 'label' %>
        <%= form.text_field :link_to_apply, class: 'input' %> 
      </div>

      <div class="lg:col-span-1">
        <%= form.label :headquarters, class: 'label' %>
        <%= form.text_field :headquarters, class: 'input' %>
      </div>
    </div>

    <div class="input-group">
      <%= form.label :description, class: 'label' %>
      <%= form.rich_text_area :description, class: 'input' %>
    </div>
    <div class="grid grid-cols-1 gap-6 lg:grid-cols-2 input-group">
      <div class="lg:col-span-1">
        <%= form.label :company_name, class: 'label' %>
        <%= form.text_field :company_name, class: 'input' %>
      </div>
      <div class="lg:col-span-1">
        <%= form.label :compnay_website, class: 'label' %>
        <%= form.text_field :compnay_website, class: 'input' %>
      </div>
    </div>

    <div class="input-group">
      <%= form.label :company_description, class: 'label' %>
      <%= form.rich_text_area :company_description, class: 'input' %>
    </div>

    <div class="input-group">
      <%= form.label :role_type, class: 'label' %>
      <%= form.text_field :role_type, class: 'input' %>
    </div>

    <div class="flex lg:flex-no-wrap flex-wrap items-center justify-start input-group">
      <div class="lg:w-1/3 lg:pr-2 w-full lg:mb-0 mb-6">
        <%= form.label :compensation_type, class: 'label' %>
        <div class="relative">
          <%= form.select :compensation_type, options_for_select(Job::COMPENSATION_TYPES),{prompt: 'select one'}, {class: 'select'} %>
          <%= select_arrow %>
        </div>
      </div>

      <div class=" lg:px-2 lg:pl-2 lg:w-1/3 w-full lg:mb-0 mb-6">
        <%= form.label :compensation_range, class: 'label' %>
        <div class="relative">
          <%= form.select :compensation_range,options_for_select(Job::COMPENSATION_RANGES),{prompt: 'select one'}, {class: 'select'}  %>
          <%= select_arrow %>
        </div>
      </div>

      <div class="lg:pl-2 lg:w-1/3 w-full lg:mb-0 mb-6">
        <%= form.label :estimated_hours, class: 'label' %>
        <div class="relative">
          <%= form.select :estimated_hours,options_for_select(Job::HOURLY_RANGES),{prompt: 'select one'}, {class: 'select'}  %>
          <%= select_arrow %>
        </div>
      </div>
    </div>

    <div class="lg:pr-8 lg:w-1/3 input-group">
      <%= form.label :year_of_experience, class: 'label' %>
      <%= form.text_field :year_of_experience, class: 'input' %>
    </div>

    <div class="lg:w-1/2 input-group input-checkbox">
      <%= form.check_box :remote , class: 'input'%>
      <%= form.label :remote,"Is this a remote only job?", class: 'label' %>
    </div>

    <div class="input-group">
      <%= form.submit class: 'btn btn-green' %>
    </div>
  <% end %>
</div>
