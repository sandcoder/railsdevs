<div class="relative">
  <%= link_to job, class: 'border-2 border-grey-400 rounded px-10 p-6 mb-4 block transition ease-in-out duration-300 hover:shadow-lg' do %>
    <!-- <%# if job.company_logo.attached? %> -->
      <!-- <div class="absolute top-0 left-0 w-16 h-16 mt-8 -ml-8 transition duration-300 ease-in-out transform rounded-full">
        <%#= image_tag job.company_logo.variant(resize_to_fit: [200, 200]), class: 'w-16 h-16 object-cover border border-black rounded-full'%>
      </div>       -->
    <!-- <%# end %>  -->
    <div class="flex items-center">
      <p class="text-grey-700"><%= job.company_name %></p>
      <% if job.featured? %>
        <span class="px-2 ml-2 py-px text-xs font-bold tracking-wide text-black uppercase bg-yellow-500 rounded-lg">Featured</span>
      <% end %>
    </div>   
    <h3 class="text-xl font-black"><%= job.title %></h3>
    <p class="text-sm leading-tight text-grey-700"></p>
    <%= job.compensation_type %>
    <% if job.compensation_type.downcase == 'contract' %>
      , <%= job.estimated_hours %> hours
    <% else %>
        , <%= number_to_currency(job.compensation_range) %>, <%= pluralize(job.year_of_experience, 'year') %> of experience   
    <% end %>
    </p>
    <p>
      <% if job.remote? %>
        Remote,
      <% end %>
      <%= job.headquarters %>
    </p>
    
  <% end %>

  <% if admin? %>
    <div class="absolute top-0 right-0 mt-4 mr-4">
      <%= link_to 'Edit', edit_job_path(job), class: 'underline mr-1' %>
      <%= link_to 'Delete', job, method: :delete, data: { confirm: 'Are you sure?' }, class: 'underline mr-1' %>
    </div>
  <% end %>
</div>
